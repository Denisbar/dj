                  "widget":{
                    "title":"Widget Name",
                    "type":"string"
                  },
                  "url":{
                    "title":"URL",
                    "type":"string"
                  }
                }
              },
              "class":{
                "title":"Class",
                "type":"string",
                "enum":["normal","warning","alert","success","secondary"],
                "default":"normal"
              }
            }  
        }
      }    
    }  
  }
